{
  "$id": "https://aura/schemas/report.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Analytics Report",
  "type": "object",
  "required": ["id","insights","hypotheses","executive_summary"],
  "properties": {
    "id": { "type": "string" },
    "executive_summary": { "type": "string" },
    "insights": {
      "type": "array",
      "items": { "$ref": "https://aura/schemas/insight.json" }
    },
    "hypotheses": {
      "type": "array",
      "items": { "$ref": "https://aura/schemas/hypothesis.json" }
    },
    "appendix": { "type": "string" },
    "validator_scorecard": { "type": "object" }
  },
  "additionalProperties": false
}
