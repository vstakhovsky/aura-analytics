{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aura/schemas/insight.schema.json",
  "type": "object",
  "required": ["id","domain","title","summary","confidence","impact","metrics","figures"],
  "properties": {
    "id":         { "type": "string" },
    "domain":     { "type": "string", "enum": ["data_quality","product","financial"] },
    "title":      { "type": "string" },
    "summary":    { "type": "string" },
    "confidence": { "type": "number" },
    "impact":     { "type": "string" },
    "metrics":    { "type": "array", "items": { "$ref": "#/$defs/metric" } },
    "figures":    { "type": "array", "items": { "$ref": "#/$defs/figure" } },
    "methodology":{ "type": ["string","null"] },
    "evidence":   { "type": ["string","null"] }
  },
  "$defs": {
    "metric": {
      "type": "object",
      "required": ["name","value","unit"],
      "properties": {
        "name":   { "type": "string" },
        "value":  { "type": ["number","integer"] },
        "unit":   { "type": "string" },
        "method": { "type": ["string","null"] }
      },
      "additionalProperties": true
    },
    "figure": {
      "type": "object",
      "required": ["caption","path"],
      "properties": {
        "caption": { "type": "string" },
        "path":    { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
